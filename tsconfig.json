{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "jsx": "react",
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "resolveJsonModule": true
    },
    "include": [
      "src"
    ]
}
  